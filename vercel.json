{
  "version": 2,
  "buildCommand": "python3 -m pip install -r requirements.txt && python3 manage.py migrate --noinput && python3 manage.py collectstatic --noinput",
  "builds": [
    { "src": "passenger_wsgi.py", "use": "@vercel/python" }
  ],

  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "max-age=31536000, immutable" },
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/passenger_wsgi.py"
    }
  ]
}
